let url = "https://rickandmortyapi.com/api/character/"

$(document).ready(function(){
  $("button").click(function(){
    var random = Math.floor(Math.random() * 493);
    $.getJSON(url+random, function(result){ 
      console.log(result)
      document.getElementById("nom").innerHTML = result.name;
      document.getElementById("etat").innerHTML = result.status;
      document.getElementById("espece").innerHTML = result.species;
      document.getElementById("genre").innerHTML = result.gender;
      document.getElementById("origin").innerHTML = result.origin.name;
      document.getElementById("location").innerHTML = result.location.name;
      document.getElementById("profil").src = result.image;

    });
  });
});
